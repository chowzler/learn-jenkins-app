pipeline {
    agent any

    stages {
        stage('w/o docker') {
            steps {
                echo 'No docker'
            }
        }
    
        stage('w/ docker') {
            agent {
              docker {
                    image 'node:18-alpine'
                }  
            }
            steps {
                sh '''
                    echo "with docker"
                    npm --version
                '''
                
            }
        }
    }
}
